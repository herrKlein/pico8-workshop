-- player
function init_player()
 return {
  x=10, -- x position on screen
  y=100, -- y position on screen
  vy=0, -- velocity/speed on y position
  grv=0.1,  -- gravity on plr
  fri = 2, -- friction on bounce
  flpvel = 1, -- flap velocity
  flapping = false,
  dead = false,
  vx=0.5,
  w=16,
  h=16,
  anim={1,3},
  sprt=1
 }
end

function update_player(plr)

 local flag, tile = collide(plr, abs(map_x))
 if flag == 5 then
   mset(tile.x,tile.y,0)
   sfx(3,1)
 end

 if btn(2) then 
  plr.y -= plr.flpvel
  plr.vy = 0 
 end

 if not btn(2) then
  plr.vy += plr.grv -- add gravity to current velocity
  plr.y += plr.vy -- calculate next position for y

  local ground=128-20
  if plr.y > ground then -- hit the ground
   plr.y = ground -- correction for below treshold
   plr.vy *= -1 -- reverse velocity 

  --  if abs(plr.vy) < 1 then plr.vy = 0 end

   if (flag == 1 ) then 
    plr.vy -= (2*plr.vy)
    sfx(0)
   end
   if (flag == 2 ) then 
    plr.vy += max(plr.fri, plr.vy)
    sfx(1)
   end
   if (flag == 4) then 
    plr.dead = true
    sfx(4)
   end

  end
 end

 if sgn(plr.vy) == 1 then plr.sprt = 3 end

 plr.x += plr.vx
end

function  draw_player(plr)
 spr(plr.sprt, plr.x, plr.y, 2, 2)
end

