t=0
tps=1

p = {}
m = {}

function _init()
 m = init_map()
 p = init_player()
end

function _update60()

 t+=1
 if (t%tps!=0) return
  
 if not p.dead then
  update_map(m)
  update_player(p)
 else
  if btn(2) and p.dead then 
   _init()
  end
 end
end

function _draw()
 cls(12)
 -- start debug
 print(p.dead,-m.x,10)
 print("vy:   " .. p.vy,-m.x,20)
 print("sgn:  " .. sgn(p.vy),-m.x,30)
 print(p.flapping,-m.x,40)
 -- end debug

 draw_map(m)
 draw_player(p)
end

