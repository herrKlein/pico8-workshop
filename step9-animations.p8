-- add sounds

grav = 0.04 -- 1. adapt to game gravity
flap = 1
nrg = 50
fri = 3
ground = 128-20
map_speed = 1
timer = 1
map_x = 0

function _init()
 plr = {
  size={w=16,h=16},
  pos={x=10, y=10},
  sprite=1,
  move = {
   vy = 0,
   bounce = -1
  },
  flapping = false,
  diving = false,
  dead = false,
 }
end

function _update60()
 timer += 1

 local flag, tile = collide(plr, abs(map_x))
--  printh(flag)
 if flag == 5 then
  sfx(2,-2)
  mset(tile.x,tile.y,0)
 end


 if btn(4) and nrg > 0 then 
  -- plr.pos.y -= flap
  plr.move.vy = sgn(plr.move.v) * -1
  sfx(1)
  -- nrg -= 1
 end
  plr.move.vy += grav
  plr.pos.y += plr.move.vy
  if plr.pos.y > ground then
   plr.move.vy *= plr.move.bounce
   plr.pos.y = ground
   
   -- to decide to adapt nrg or vel
   if flag == 3 then
    plr.move.vy += 0.2 * plr.move.vy -- extra bounce
   else
    plr.move.vy -= 0.6 * plr.move.vy -- apply friction
    sfx(0)
  end
  if abs(plr.move.vy) < 0.1 then plr.move.vy = 0 end
  
  nrg = 50
end
 map_x -= map_speed
end

function _draw()
 cls(12)
 print(plr.move.vy, 20,0,7)
 map(0, 0, map_x, 0, 128, 16)

 if (plr.dead) plr.sprite = 3
 if (not plr.dead) then
  if (plr.flapping) plr.sprite = 3
  if (plr.flapping) plr.sprite = 3
 end
 spr(plr.sprite, plr.pos.x, plr.pos.y, 2, 2)
end
